<Window x:Class="Mhub.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Mhub"
        mc:Ignorable="d"
        Title="MainWindow" Height="450" Width="600">
    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="2*"/>
            <ColumnDefinition Width="*"/>
            <ColumnDefinition Width="*"/>
        </Grid.ColumnDefinitions>
        <Grid.RowDefinitions>
            <RowDefinition Height="9*"/>
            <RowDefinition Height="105*"/>
        </Grid.RowDefinitions>
        <TextBox Grid.Column="0" x:Name="Search" Text="asdasd" Margin="10 5 5 5" GotMouseCapture="Search_GotMouseCapture"/>
        <ComboBox Grid.Column="2" Margin="5" />
        <ComboBox Grid.Column="1" Margin="5" />
        
        <StackPanel x:Name="mainArea" Orientation="Vertical" Grid.Row="1" VerticalAlignment="Top" Grid.ColumnSpan="3"></StackPanel>
    </Grid>
</Window>

<Window x:Class="Mhub.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Mhub"
        mc:Ignorable="d"
        Title="MainWindow" Height="450" Width="600">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="9*"/>
            <RowDefinition Height="105*"/>
        </Grid.RowDefinitions>
        <StackPanel Grid.Row="0" Orientation="Horizontal">
            <TextBox x:Name="Search" Text="asdasd" Width="300" Margin="10 5 5 5" GotMouseCapture="Search_GotMouseCapture"  />
            <ComboBox Margin="5" Width="130"/>
            <ComboBox Margin="5" Width="130"/>
        </StackPanel>
        <StackPanel x:Name="mainArea" Orientation="Horizontal" Grid.Row="1" VerticalAlignment="Top"></StackPanel>
    </Grid>
</Window>
